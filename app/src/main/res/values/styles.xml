<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ToolbarCustomTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#4F6530</item>
        <item name="colorControlActivated">#4F6530</item>
        <item name="colorControlHighlight">#4F6530</item>
        <item name="colorPrimary">#4F6530</item>
        <item name="android:background">#FEFCF7</item>
        <item name="android:textColorPrimary">#4F6530</item>
        <item name="android:textColorSecondary">#4F6530</item>
        <item name="android:textColorHint">#4F6530</item>
    </style>


</resources>